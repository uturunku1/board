{{#if addNewQuestion}}
<h3>New Question:</h3>
<form>
  <div class="form-group">
    <label for="author">author</label>
    {{input type="text" id="author" value="author"}}
  </div>
  <div class="form-group">
    <label for="question">Ask question</label>
    {{input type="text" id="question" value="question"}}
  </div>
  <div class="form-group">
    <label for="notes">additional information(optional)</label>
    {{input type="text" id="notes" value="notes"}}
  </div>
  <button {{action 'saveQuestion'}}>Save</button>
</form>
{{else}}
  <button {{action 'questionFormShow'}}>Question</button>
{{/if}}
